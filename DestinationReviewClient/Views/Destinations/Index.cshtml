@{
  Layout = "_Layout";
}

@using DestinationReviewClient.Models;
@model List<Destination>

<h1>Destinations</h1>
<p>@Html.ActionLink("Add a New Destination", "Create")</p>
<hr />
@foreach (Destination destination in Model)
{
  <h3>@Html.ActionLink($"{destination.City}, {destination.Country}", "Details", new { id = destination.DestinationId })</h3>
  <hr />
}